---
const { src, alt = "" } = Astro.props;
---

<div class="liquid-wrap">
    <img class="base-photo" src={src} alt={alt} />
</div>

<style>
    /* in LaminarCard.astro or a global */
    .liquid-wrap {
        display: block;
        position: relative;
        width: 100%;
        aspect-ratio: 16/9;
        overflow: hidden;
    }
    .base-photo {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        pointer-events: none;
    }

    .liquid-wrap > canvas {
        position: absolute;
        inset: 0;
        width: 100% !important;
        height: 100% !important;
        display: block;
    }
</style>

---
import type { Member } from "../data/team";
const { members } = Astro.props as { members: Member[] };
---
<section id="team" class="py-16 px-6 md:px-10 bg-neutral-900/60">
  <h2 class="text-3xl md:text-4xl font-bold text-center mb-10 neon-text">Meet the Team</h2>

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
    {members.map((m) => (
      <article class="team-card bg-neutral-900/80 border border-neutral-800 rounded-2xl p-6 text-center hover:shadow-neon transition-shadow">
        <img src={m.avatar ?? "/logo.png"} alt={m.name} class="mx-auto w-28 h-28 object-cover rounded-full mb-4 shadow-neon" />
        <div class="flex items-center justify-center gap-2 flex-wrap">
          <h3 class="text-xl font-semibold">{m.name}</h3>
          {m.title && <span class="badge">{m.title}</span>}
        </div>
        <p class="text-neon-purple/90 font-mono">{m.roles.join(" / ")}</p>
        <p class="mt-2 text-sm text-neutral-300">
          <span class="font-mono">XP:</span> {m.experienceYears} yrs
          &nbsp;/&nbsp;<span class="font-mono">Grade:</span> {m.grade}
        </p>
      </article>
    ))}
  </div>

</section>
